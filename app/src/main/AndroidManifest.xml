<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ee.taavikase.pocotask">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/login_name" />

        <activity android:name=".activity.RegisterActivity" />

        <activity
            android:name=".activity.LoginSuccessActivity"
            android:label="@string/login_success_name" />

        <activity android:name=".activity.UserPassActivity" />

        <activity android:name=".activity.AddressActivity" />

        <activity
            android:name=".activity.RegisterSuccessActivity"
            android:label="@string/registration_success_name" />

        <activity android:name=".activity.BaseActivity" />
    </application>

</manifest>
